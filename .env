# 人脸匹配阈值，越小越严格，范围建议0.4-0.6
FACE_TOLERANCE=0.5

# 检测频率（每隔多少帧检测一次）
DETECTION_FREQUENCY=30

# 输出目录
OUTPUT_DIR=output

# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO 

# 文件自动清理设置
# 文件保留天数（0表示不自动清理）
FILE_RETENTION_DAYS=7

# 检测结果最小时间间隔（秒）
MIN_DETECTION_INTERVAL=2.0

# 上传文件大小限制（MB）
MAX_UPLOAD_SIZE=600

# 性能优化相关设置
# 处理线程数（建议设置为CPU核心数）
MAX_PROCESSING_THREADS=8

# 图像缩放比例（0.5表示缩小到原来的一半，值越小处理越快，但可能降低精度）
FRAME_SCALE=0.5

# 人脸检测模型（'hog'速度快，'cnn'精度高但需要GPU）
FACE_DETECTION_MODEL=hog